%h1= t('.title')
%p= link_to t('.new_song'), new_song_path

%table
  %thead
    %tr
      %th= Song.human_attribute_name :title
      %th= Song.human_attribute_name :track
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for song in @songs
      %tr{ :class => cycle(:odd, :even) }
        %td= song.title
        %td= song.track
        %td.action= link_to t('show'), song
        %td.action= link_to t('edit'), edit_song_path(song)
        %td.action= link_to t('destroy'), song, :confirm => t('are_you_sure'), :method => :delete
