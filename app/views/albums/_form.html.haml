= form_for(@album) do |f|
  - if @album.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@album.errors.count, 'error')} prohibited this user from being saved:"
      %ul
      - @album.errors.full_messages.each do |msg|
        %li= msg
  
  .field
    = f.label :title
    %br
    = f.text_field :title
  .field
    = f.label :artist
    %br
    = f.text_field :artist

  .actions
    = f.submit
