%h1= t('.title')
%p= link_to t('.new_album'), new_album_path

%table
  %thead
    %tr
      %th= Album.human_attribute_name :title
      %th= Album.human_attribute_name :artist
      %th{:colspan => 3}= t 'actions'
  
  %tbody
    - for album in @albums
      %tr{ :class => cycle(:odd, :even) }
        %td= album.title
        %td= album.artist
        %td.action= link_to t('show'), album
        %td.action= link_to t('edit'), edit_album_path(album)
        %td.action= link_to t('destroy'), album, :confirm => t('are_you_sure'), :method => :delete
