-#encoding: UTF-8
#audio
  %audio#player
#musicbar
  %a#previous_song{:href => '#prev'}
  %a#play_button{:href => '#play'}
  %a#next_song{:href => '#next'}
%table#songs
  %thead
    %tr
      %th Track
      %th Title
      %th Album
      %th Artist
  %tbody
    - for album in @albums
      -for song in album.songs.sort!{|t1,t2|t1.track <=> t2.track}
        %tr{:id => dom_id(song),:data => {:s3_key => song.s3_key}, :class => cycle(:odd, :even)}
          %td= song.track
          %td= song.title
          %td= album.title
          %td= album.artist